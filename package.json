{
  "name": "vending-machines",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "backend": "yarn workspace backend start:dev",
    "frontend": "yarn workspace frontend start",
    "build:shared": "concurrently \"yarn workspace @vending/types build\" \"yarn workspace @vending/utils build\"",
    "start": "yarn build:shared && concurrently --kill-others-on-fail \"yarn backend\"  \"yarn frontend\""
  },
  "engines": {
    "node": "16.13.2",
    "yarn": "1.22.18"
  },
  "dependencies": {
    "concurrently": "^7.3.0"
  }
}
